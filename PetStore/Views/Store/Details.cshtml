@model PetStore.Models.Animal

@{
    ViewBag.Title = "Detail";
}

<h2> @Model.Name</h2>
<hr />
<div class="container">
    <div class="col-lg-5 polaroid">
        <p>@Model.Price</p>
        <img src="~/Images/@Model.PicturePath" class="img-responsive" />
    </div>
    <div class="col-lg-7 detailText">
        <p>@Model.ShortDescription</p>
        <p>@Model.MainDescription</p>
    </div>
</div>
